<resources>
    <style name="Theme.Nasa.System" parent="Theme.MaterialComponents.DayNight.NoActionBar"/>

    <style name="Theme.Nasa.Light" parent="Theme.MaterialComponents.Light.NoActionBar"/>

    <style name="Theme.Nasa.Dark" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="Theme.Nasa.Custom" parent="Theme.Nasa.System">
        <item name="colorPrimary">@color/colorPrimaryCustom</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCustom</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDarkCustom</item>
        <item name="colorOnPrimary">@color/colorOnPrimaryCustom</item>
        <item name="colorSecondary">@color/colorSecondaryCustom</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariantCustom</item>
        <item name="colorOnSecondary">@color/colorOnSecondaryCustom</item>
        <item name="colorError">@color/colorErrorCustom</item>
        <item name="colorOnError">@color/colorOnErrorCustom</item>
        <item name="colorSurface">@color/colorSurfaceCustom</item>
        <item name="colorOnSurface">@color/colorOnSurfaceCustom</item>
        <item name="colorOnBackground">@color/colorOnBackgroundCustom</item>
        <item name="fontFamily">@font/glimmer</item>
        <item name="android:fontFamily">@font/glimmer</item>
    </style>

    <style name="Theme.Nasa.Splash" parent="Theme.Nasa.System">
        <item name="android:windowBackground">@drawable/splash_background_drawable</item>
    </style>

    <style name="Theme.Nasa.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Nasa.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="nasa_chip_choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>